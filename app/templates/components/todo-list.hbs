<section id="main">
    {{yield}}

    {{input type="checkbox" id="toggle-all" checked=allAreDone}}
</section>

<footer id="footer">
    <span id="todo-count">
        <strong>2</strong> todos left
    </span>
    <ul id="filters">
        <li>
            {{#link-to "lists.list.category.todos.index" activeClass="selected"}}All{{/link-to}}
        </li>
        <li>
            {{#link-to "lists.list.category.todos.incomplete" activeClass="selected"}}Active{{/link-to}}
        </li>
        <li>
            {{#link-to "lists.list.category.todos.complete" activeClass="selected"}}Complete{{/link-to}}
        </li>
    </ul>

    <button id="clear-completed">
        Clear completed (1)
    </button>
</footer>
